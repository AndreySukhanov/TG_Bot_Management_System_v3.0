{
  "functions": {
    "api/*.py": {
      "runtime": "python@3.9"
    }
  },
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/simple_bot"
    },
    {
      "source": "/set_webhook",
      "destination": "/api/simple_bot"
    },
    {
      "source": "/webhook_info",
      "destination": "/api/simple_bot"
    },
    {
      "source": "/health",
      "destination": "/api/simple_bot"
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "/api/dashboard"
    },
    {
      "source": "/",
      "destination": "/api/simple_bot"
    }
  ]
}